+void udc_ctrl(enum usbd_event event, int param)
+{
+	S3C24X0_GPIO * const gpio = S3C24X0_GetBase_GPIO();
+
+	switch (event) {
+	case UDC_CTRL_PULLUP_ENABLE:
+		if (param)
+			gpio->GPCDAT |= (1 << 5);	// GPC5
+		else
+			gpio->GPCDAT &= ~(1 << 5);
